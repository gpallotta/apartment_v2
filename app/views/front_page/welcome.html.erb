<% page_title 'Apartmentalize - Roommate Management System' %>

<div class="row">
  <div class="span6 offset1">
    <div class="intro-message">
      <h1 class="apartment-title">Apartmentalize</h1>
      <p>
        An expense and chore tracking system <br />
        you can use with your roommates
     </p>
     <p>
        <%= link_to 'About', about_page_path, class: 'about' %>
      </p>
    </div>
  </div>


  <div class="span4">
    <div class="sign-in-wrapper">
        <%= form_for("user", :url => new_user_session_path) do |f| %>
          <%= f.text_field :email, placeholder: 'Email',
                    class: 'text-field' %>
          <%= f.password_field :password, placeholder: 'Password',
                    class: 'text-field' %>
          <%= f.check_box :remember_me, class: 'remember-me-box' %>
          <%= f.label :remember_me, class: "remember-me" %>
          <%= f.submit 'Sign in', class: 'sign-in btn' %>
          <%= link_to "Forgot your password?", new_password_path('user') %>
          <p id="test-credentials" data-toggle="modal" data-target="#myModal">
            Test credentials
          </p>
        <% end %>
    </div>

    <div class="signup-button-wrapper">
      <%= link_to 'Sign up', new_group_path, class: 'btn btn-large' %>
    </div>

  </div>
</div>

<div id="myModal" class="modal fade" tabindex="-1" role="dialog"
        aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
    </button>
    <h3 id="myModalLabel">Test Credentials</h3>
  </div>
  <div class="modal-body">

    <p>
    A set of users are provided for demoing the application. All users are part
    of the same group and can interact on the site. Credentials are as follows:

      <ul>
        <li>Email: test1@test1.com</li>
        <li>Password: password</li>
      </ul>

      <ul>
        <li>Email: test2@test2.com</li>
        <li>Password: password</li>
      </ul>

      <ul>
        <li>Email: test3@test3.com</li>
        <li>Password: password</li>
      </ul>
    <p>

  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
  </div>
</div>
