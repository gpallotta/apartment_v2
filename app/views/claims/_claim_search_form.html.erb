<%= form_tag({:controller => 'claims', :action => 'index' },
                    {:method => 'get', :class => 'claim-search-form'}) do |f| %>

  <%= label_tag "to-receive", "To receive from", class: 'user-label btn' %>
  <%= check_box_tag "z[to_receive]", true, false,
                {id: 'to-receive', :hidden => true} %>


  <%= label_tag 'to-pay', 'To pay', class: 'user-label btn' %>
  <%= check_box_tag "z[to_pay]", true, false,
                { :id => "to-pay", :hidden => true } %>


  <div class="search-button-wrapper">
    <% other_users.each do |u| %>
        <%= label_tag "#{u.name}-checkbox", "#{u.name}", class: 'user-label btn' %>
        <%= check_box_tag "z[user_name][]", u.name, false, { :id => "#{u.name}-checkbox", :hidden => true } %>
    <% end %>
  </div>


  <div class="search-button-wrapper">
      <%= label_tag 'unpaid-checkbox', 'Unpaid', class: 'include-paid btn' %>
      <%= check_box_tag 'z[paid_status][]', false, false,
                {:id => "unpaid-checkbox", :hidden => true} %>

      <%= label_tag 'paid-checkbox', 'Paid', class: 'include-paid btn' %>
      <%= check_box_tag 'z[paid_status][]', true, false,
                {:id => "paid-checkbox", :hidden => true} %>
  </div>


  <div class="field">
    <%= text_field_tag 'z[title_or_description_cont]', nil,
            placeholder: 'Title or description contains...',
            class: 'title-desc-cont' %>
  </div>


  <div class="field">
    <%= label_tag 'z[amount_min]', 'Amount between'%>
    <%= text_field_tag 'z[amount_min]', nil, class: 'amount-search' %>
    <%= label_tag 'z[amount_max]', 'and', class: 'amount-between' %>
    <%= text_field_tag 'z[amount_max]', nil, class: 'amount-search' %>
  </div>

  <div class="actions"><%= submit_tag "Search Claims", class: 'btn submit-search-button' %></div>

<% end %>
