<div class="row">

  <%= render 'shared/profile_links' %>

  <div class="span5 offset1">
    <%= current_user.group.identifier %>

    <ul>
      <% current_user.group.users.each do |u| %>
        <li>
          <% if u.id != current_user.id %>
            <%= u.name %>
            <%= u.email %>
          <% end %>
        </li>
      <% end %>
    </ul>

    <h2>Important People</h2>

    <%= link_to 'Add An Important Person', new_manager_path %>

    <ul>
      <% current_user.group.managers.each do |m| %>
        <li>
          <%= m.title %>
          <%= m.name %>
          <%= m.email %>
          <%= m.address %>
          <%= m.phone_number %>
          <%= link_to 'Edit', edit_manager_path(m) %>
        </li>
      <% end %>
    </ul>

  </div>

</div>
