$("#comments-count").html('<%= @claim.comments.count %> comments')

<% if @comment.errors.any? %>
  <% @comment.errors.each do |field, message| %>
    $("#comment-form-errors").append('<%= field.capitalize %> <%= message %>');
  <% end %>
<% else %>
  $(".comments-list").append('<%= j render @comment %>');
  $("#comment-form-errors").html('');
<% end %>

$("#new_comment").each(function() {
  this.reset();
});
